= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :wins
    = f.number_field :wins
  .field
    = f.label :losses
    = f.number_field :losses
  .field
    = f.label :ties
    = f.number_field :ties
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
